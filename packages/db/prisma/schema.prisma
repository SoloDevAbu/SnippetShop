generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  DEVELOPER
  USER
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  name          String?
  role          Role
  provider      String
  provider_id   Int?        @unique
  created_at    DateTime      @default(now())
  code_snippets CodeSnippet[] 
  purchases     Purchase[] 
}


model Language {
  id            String        @id @default(cuid())
  name          String        @unique
  judge0_id     Int           @unique
  code_snippets CodeSnippet[]
}

model Tag {
  id                String           @id @default(cuid())
  name              String           @unique
  code_snippet_tags CodeSnippetTag[]
}

model CodeSnippet {
  id                String           @id @default(cuid())
  title             String
  description       String
  language_id       String?
  developer_id      String?
  created_at        DateTime         @default(now())
  updated_at        DateTime         @updatedAt
  status            Status           @default(PENDING)
  test_cases        TestCase[]
  code_snippet_tags CodeSnippetTag[]
  purchases         Purchase[]
  language          Language?         @relation(fields: [language_id], references: [id])
  developer         User?             @relation(fields: [developer_id], references: [id])
}

model TestCase {
  id              String      @id @default(cuid())
  code_snippet_id String
  input           String
  expected_output String
  created_at      DateTime    @default(now())
  code_snippet    CodeSnippet @relation(fields: [code_snippet_id], references: [id])
}

model CodeSnippetTag {
  code_snippet_id String
  tag_id          String
  code_snippet    CodeSnippet @relation(fields: [code_snippet_id], references: [id])
  tag             Tag         @relation(fields: [tag_id], references: [id])
  @@id([code_snippet_id, tag_id])
}

model Purchase {
  id              String      @id @default(cuid())
  user_id         String
  code_snippet_id String
  zip_file_key    String
  password        String
  purchased_at    DateTime    @default(now())
  user            User        @relation(fields: [user_id], references: [id])
  code_snippet    CodeSnippet @relation(fields: [code_snippet_id], references: [id])
}